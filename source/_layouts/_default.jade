doctype html
html(lang="en")
  //- Defaults for page variables
  -var pageTitle = "Kashi Sam"
  -var mainMenu = true
  -var baseScripts = ["http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"]
  //- Optional override of default variables
  block Vars
  -var allScripts = baseScripts
  -if (typeof(scripts) !== "undefined") {
    allScripts = baseScripts.concat(scripts)
  -}    
  head
    title=pageTitle
  body
    header.PageHeader
      h1= pageTitle
      if (mainMenu !== false)
        nav
          ul.MainMenu
            li.MainMenu-selected
              a(href="/") News
            li
              a(href="/work") Work
            li
              a(href="/contact") Contact
    div.Main
      block MainContent
    each script in baseScripts
      script(src="#{script}",type="text/javascript")